{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://skillsets.cc/schema/skillset.schema.json",
  "title": "Skillset Manifest",
  "description": "Schema for skillset.yaml manifest files in the skillsets.cc registry",
  "type": "object",
  "required": [
    "schema_version",
    "name",
    "version",
    "description",
    "author",
    "verification",
    "tags"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0",
      "description": "Schema version for manifest format"
    },
    "name": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]+$",
      "minLength": 1,
      "maxLength": 100,
      "description": "Skillset name (alphanumeric, hyphens, underscores only)"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 200,
      "description": "Brief description of the skillset (10-200 characters)"
    },
    "author": {
      "type": "object",
      "required": ["handle"],
      "properties": {
        "handle": {
          "type": "string",
          "pattern": "^@[A-Za-z0-9_-]+$",
          "description": "GitHub handle (e.g., @username)"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "pattern": "^https?://",
          "description": "Author's website or GitHub profile URL"
        }
      },
      "additionalProperties": false
    },
    "verification": {
      "type": "object",
      "required": ["production_links", "audit_report"],
      "properties": {
        "production_links": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["url"],
            "properties": {
              "url": {
                "type": "string",
                "format": "uri",
                "pattern": "^https?://",
                "description": "Production URL"
              },
              "label": {
                "type": "string",
                "maxLength": 50,
                "description": "Optional label (defaults to domain)"
              }
            },
            "additionalProperties": false
          },
          "minItems": 1,
          "maxItems": 5,
          "description": "URLs to live deployments, repositories, or case studies (1-5)"
        },
        "production_proof": {
          "type": "string",
          "pattern": "^\\./.+",
          "description": "Path to PROOF.md file (optional)"
        },
        "audit_report": {
          "type": "string",
          "pattern": "^\\./.+",
          "description": "Path to AUDIT_REPORT.md file"
        }
      },
      "additionalProperties": false
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$",
        "minLength": 2,
        "maxLength": 30
      },
      "minItems": 1,
      "maxItems": 10,
      "uniqueItems": true,
      "description": "Keywords for discovery (lowercase, hyphens only, 1-10 tags)"
    },
    "compatibility": {
      "type": "object",
      "properties": {
        "claude_code_version": {
          "type": "string",
          "pattern": "^(>=|>|<=|<|=)?[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "Claude Code version requirement (e.g., >=1.0.0)"
        },
        "languages": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9+-]+$"
          },
          "uniqueItems": true,
          "description": "Compatible programming languages (lowercase)"
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "string",
      "enum": ["active", "deprecated", "archived"],
      "default": "active",
      "description": "Lifecycle status of the skillset"
    },
    "entry_point": {
      "type": "string",
      "pattern": "^\\./.+",
      "description": "Path to main documentation file (e.g., ./content/CLAUDE.md)"
    },
    "mcp_servers": {
      "type": "array",
      "maxItems": 20,
      "items": {
        "type": "object",
        "required": ["name", "type", "mcp_reputation", "researched_at"],
        "properties": {
          "name": { "type": "string" },
          "type": { "enum": ["stdio", "http", "docker"] },
          "command": { "type": "string" },
          "args": {
            "type": "array",
            "items": { "type": "string" }
          },
          "url": { "type": "string", "pattern": "^https?://" },
          "image": { "type": "string" },
          "servers": {
            "type": "array",
            "maxItems": 10,
            "items": {
              "type": "object",
              "required": ["name", "command", "mcp_reputation", "researched_at"],
              "properties": {
                "name": { "type": "string" },
                "command": { "type": "string" },
                "args": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "mcp_reputation": { "type": "string", "minLength": 20 },
                "researched_at": { "type": "string", "format": "date" }
              },
              "unevaluatedProperties": false
            }
          },
          "mcp_reputation": { "type": "string", "minLength": 20 },
          "researched_at": { "type": "string", "format": "date" }
        },
        "unevaluatedProperties": false,
        "allOf": [
          {
            "if": { "properties": { "type": { "const": "stdio" } }, "required": ["type"] },
            "then": { "required": ["command"] }
          },
          {
            "if": { "properties": { "type": { "const": "http" } }, "required": ["type"] },
            "then": { "required": ["url"] }
          },
          {
            "if": { "properties": { "type": { "const": "docker" } }, "required": ["type"] },
            "then": { "required": ["image", "servers"] }
          }
        ]
      }
    }
  },
  "additionalProperties": false
}
