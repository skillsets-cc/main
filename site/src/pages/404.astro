---
export const prerender = true;

import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout title="Not Found - Skillsets.cc">
  <div class="max-w-4xl mx-auto px-4 py-24 text-center">
    <h1 class="text-6xl font-serif font-bold text-text-ink mb-4">404</h1>
    <p class="text-xl text-text-secondary font-serif mb-8">
      The skillset you're looking for doesn't exist or has been removed.
    </p>
    <a
      href="/"
      class="inline-block px-6 py-3 bg-stone-900 text-white font-mono text-sm hover:bg-stone-800 transition-colors"
    >
      Browse all skillsets
    </a>
  </div>
</BaseLayout>
