---
export const prerender = true;

import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout title="Skillsets.cc">
  <main class="relative h-screen w-full bg-stone-50 overflow-hidden">
    <!-- Centered Content -->
    <div class="absolute inset-0 flex flex-col justify-center px-8">
      <div class="max-w-4xl mx-auto w-full space-y-8">
        <!-- Word Header -->
        <div class="space-y-2">
          <h1 class="text-7xl md:text-9xl font-serif font-medium text-text-ink">
            Skillset
          </h1>
          <div class="flex items-baseline gap-4 text-xl md:text-2xl text-text-secondary font-serif">
            <span class="font-mono">/ˈskɪlˌsɛt/</span>
            <span class="italic">noun</span>
          </div>
        </div>

        <!-- Definition Block -->
        <div class="pl-0 md:pl-8 border-l-4 border-orange-500 space-y-6">
          <div class="space-y-2">
            <span class="font-bold text-text-ink font-mono text-sm">1. DEFINITION</span>
            <p class="text-2xl md:text-3xl font-serif text-text-ink leading-relaxed">
              A cohesive workflow built on interoperable Claude Code primitives—skills, agents, hooks, plugins, and MCP.
            </p>
          </div>
        </div>

        <!-- Actions -->
        <div class="pt-12 flex flex-col md:flex-row gap-6 items-start">
          <a href="/browse" class="text-orange-500 font-mono text-lg font-bold hover:underline transition-colors">
            Explore Registry ->
          </a>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
