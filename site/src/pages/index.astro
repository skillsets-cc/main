---
export const prerender = true;

import BaseLayout from '@layouts/BaseLayout.astro';
import SkillsetGrid from '@components/SkillsetGrid';
import { getSkillsets } from '@/lib/data';

const skillsets = getSkillsets();
---

<BaseLayout title="Skillsets.cc">
  <main class="max-w-7xl mx-auto px-4 py-12">
    <header class="mb-8 border-b border-border-ink pb-6">
      <div class="space-y-2">
        <h1 class="text-7xl md:text-9xl font-serif font-medium text-text-ink">
          Skillset
        </h1>
        <div class="flex items-baseline gap-4 text-xl md:text-2xl text-text-secondary font-serif">
          <span class="font-mono">/ˈskɪlˌsɛt/</span>
          <span class="italic">noun</span>
        </div>
      </div>

      <div class="mt-6 pl-0 md:pl-8 border-l-4 border-orange-500 space-y-6">
        <div class="space-y-2">
          <span class="font-bold text-text-ink font-mono text-sm">1. DEFINITION</span>
          <p class="text-lg md:text-xl font-serif text-text-ink leading-relaxed">
            A cohesive workflow built on tightly coupled Claude Code primitives—skills, agents, hooks, plugins, and MCP.
          </p>
        </div>
        <div class="space-y-2">
          <span class="font-bold text-text-ink font-mono text-sm">2. USAGE</span>
          <p class="text-lg md:text-xl font-serif text-text-ink leading-relaxed">
            Go from ad-hoc prompts to a repeatable process in one command.
          </p>
        </div>
      </div>
    </header>

    <SkillsetGrid client:load skillsets={skillsets} />
  </main>
</BaseLayout>
