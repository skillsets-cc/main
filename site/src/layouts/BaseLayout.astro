---
import AuthStatus from '@/components/AuthStatus.tsx';
import '@/styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Verified registry of production-ready Claude Code workflows' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:ital,wght@0,200..900;1,200..900&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
  </head>

  <body class="min-h-screen bg-stone-50 text-text-ink selection:bg-accent-highlight selection:text-text-ink font-sans">
    <!-- Sidebar Toggle (mobile) -->
    <button
      id="sidebar-toggle"
      class="fixed bottom-0 left-0 z-[70] md:hidden px-4 py-[15px] text-orange-500"
      aria-label="Toggle navigation"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>

    <!-- Sidebar Overlay (mobile) -->
    <div id="sidebar-overlay" class="fixed inset-0 bg-black/30 z-[55] hidden md:hidden"></div>

    <div class="md:flex min-h-screen">
      <!-- Sidebar Navigation -->
      <aside id="sidebar" class="fixed inset-y-0 left-0 w-64 flex-shrink-0 border-r border-border-ink bg-stone-50 h-screen overflow-y-auto z-[60] -translate-x-full md:translate-x-0 md:sticky md:top-0 transition-transform duration-200">
        <div class="p-6 flex flex-col h-full">
          <div class="flex items-start justify-between">
            <a href="/" class="block mb-8">
              <h1 class="text-2xl font-serif font-medium text-text-ink tracking-tight">
                Skillsets.cc
              </h1>
              <p class="text-xs font-mono text-text-tertiary mt-1">EST. 2026 â€¢ PUBLIC DOMAIN</p>
            </a>
            <button
              id="sidebar-close"
              class="md:hidden p-1 text-text-tertiary hover:text-text-ink -mr-2 mt-1"
              aria-label="Close navigation"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>

          <nav class="space-y-6">
            <div>
              <h3 class="text-xs font-bold uppercase tracking-wider text-text-tertiary mb-3 font-mono">Index</h3>
              <ul class="space-y-2">
                <li>
                  <a href="/" class="block text-base text-text-secondary hover:text-orange-500 hover:underline transition-colors">
                    Skillsets
                  </a>
                </li>
                <li>
                  <a href="/cli" class="block text-base text-text-secondary hover:text-orange-500 hover:underline transition-colors">
                    CLI
                  </a>
                </li>
                <li>
                  <a href="/contribute" class="block text-base text-text-secondary hover:text-orange-500 hover:underline transition-colors">
                    Contribute
                  </a>
                </li>
                <li>
                  <a href="/about" class="block text-base text-text-secondary hover:text-orange-500 hover:underline transition-colors">
                    About
                  </a>
                </li>
                <li>
                  <AuthStatus client:load />
                </li>
              </ul>
            </div>
          </nav>

          <!-- Social Links -->
          <div class="mt-auto pt-6">
            <div class="flex items-center justify-center gap-6">
              <a href="https://github.com/skillsets-cc" target="_blank" rel="noopener noreferrer" class="text-text-tertiary hover:text-orange-500 transition-colors" aria-label="GitHub">
