---
import '@/styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Verified registry of production-ready Claude Code workflows' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:ital,wght@0,200..900;1,200..900&family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
  </head>

  <body class="min-h-screen bg-stone-50 text-text-ink selection:bg-accent-highlight selection:text-text-ink font-sans">
    <div class="flex flex-col md:flex-row min-h-screen">
      <!-- Sidebar Navigation -->
      <aside class="w-full md:w-64 flex-shrink-0 border-r border-border-ink bg-stone-50 md:h-screen md:sticky md:top-0 overflow-y-auto">
        <div class="p-6">
          <a href="/browse" class="block mb-8">
            <h1 class="text-2xl font-serif font-medium text-text-ink tracking-tight">
              Skillsets.cc
            </h1>
            <p class="text-xs font-mono text-text-tertiary mt-1">EST. 2026 â€¢ PUBLIC DOMAIN</p>
          </a>

          <nav class="space-y-6">
            <div>
              <h3 class="text-xs font-bold uppercase tracking-wider text-text-tertiary mb-3 font-mono">Index</h3>
              <ul class="space-y-2">
                <li>
                  <a href="/browse" class="block text-sm text-text-secondary hover:text-orange-500 hover:underline transition-colors">
                    Skillsets
                  </a>
                </li>
                <li>
                  <a href="/contribute" class="block text-sm text-text-secondary hover:text-orange-500 hover:underline transition-colors">
                    Contribute
                  </a>
                </li>
                <li>
                  <a href="/about" class="block text-sm text-text-secondary hover:text-orange-500 hover:underline transition-colors">
                    About
                  </a>
                </li>
              </ul>
            </div>
          </nav>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 min-w-0 bg-white">
        <slot />
      </main>
    </div>
  </body>
</html>
