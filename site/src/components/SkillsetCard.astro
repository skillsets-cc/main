---
import type { SearchIndexEntry } from '@/types';

interface Props {
  skillset: SearchIndexEntry;
}

const { skillset } = Astro.props;
const [namespace, name] = skillset.id.split('/');
---

<article class="border border-border-ink bg-white p-6 rounded-none hover:shadow-md transition-shadow h-full flex flex-col">
  <div class="border-b border-border-ink pb-3 mb-4 flex items-start justify-between">
    <div>
      <h3 class="text-xl font-serif font-bold text-text-ink">{skillset.name}</h3>
      <p class="text-xs font-mono text-text-tertiary mt-1">
        by {skillset.author}
      </p>
    </div>
    {skillset.tags.length > 0 && (
      <span class="px-2 py-0.5 text-xs font-mono border border-border-ink bg-stone-50 text-text-secondary">
        {skillset.tags[0]}
      </span>
    )}
  </div>

  <p class="text-text-secondary font-serif mb-6 flex-grow leading-relaxed">{skillset.description}</p>

  <div class="flex items-center justify-between mt-auto pt-4 border-t border-border-ink border-dashed">
    <div class="flex items-center gap-4">
      <span class="flex items-center gap-1 text-xs font-mono text-text-tertiary">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
        </svg>
        {skillset.stars}
      </span>
    </div>

    <a
      href={`/skillset/${namespace}/${name}`}
      class="text-sm font-bold text-orange-500 hover:underline font-mono"
    >
      VIEW_ENTRY â†’
    </a>
  </div>
</article>
