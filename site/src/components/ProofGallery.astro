---
interface Props {
  productionUrl: string;
  hasAuditReport: boolean;
}

const { productionUrl, hasAuditReport } = Astro.props;
---

<section class="border border-border-ink bg-stone-50 p-6 rounded-none">
  <h2 class="text-xl font-bold font-serif mb-4 text-text-ink uppercase tracking-wider text-sm border-b border-border-ink pb-2 inline-block">Verification Proofs</h2>

  <div class="space-y-4">
    <div class="flex items-start gap-4">
      <div class="w-1 h-full min-h-[40px] bg-orange-500 flex-shrink-0"></div>
      <div>
        <h3 class="font-bold font-serif text-text-ink mb-1">Production Verified</h3>
        <p class="text-text-secondary text-sm font-serif mb-2 leading-relaxed">
          This skillset has been verified in production.
        </p>
        <a
          href={productionUrl}
          class="text-orange-500 hover:underline text-xs font-mono font-bold uppercase"
          target="_blank"
          rel="noopener noreferrer"
        >
          [View Source]
        </a>
      </div>
    </div>

    {hasAuditReport && (
      <div class="flex items-start gap-4">
        <div class="w-1 h-full min-h-[40px] bg-orange-500 flex-shrink-0"></div>
        <div>
          <h3 class="font-bold font-serif text-text-ink mb-1">Audit Complete</h3>
          <p class="text-text-secondary text-sm font-serif leading-relaxed">
            Validated with official audit skill.
          </p>
        </div>
      </div>
    )}

    <div class="flex items-start gap-4">
        <div class="w-1 h-full min-h-[40px] bg-orange-500 flex-shrink-0"></div>
      <div>
        <h3 class="font-bold font-serif text-text-ink mb-1">Schema Valid</h3>
        <p class="text-text-secondary text-sm font-serif leading-relaxed">
          Passed JSON schema validation.
        </p>
      </div>
    </div>
  </div>
</section>
